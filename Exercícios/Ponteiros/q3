#include <stdio.h>

void InsertionSort(int *v, int n){
    for(int i = 1; i < n; i++){
        int chave = v[i];
        int j = i - 1;
        while(j >= 0 && v[j] > chave){
            v[j + 1] = v[j];
            j--;
        }
        v[j + 1] = chave;
    }
}

int main()
{
    int n, i = 0; 
    
    printf("Insira o número de elementos:\n");
    scanf("%d", &n);
    int vetor[n];
    
    printf("\nInsira os elementos:\n");
    for(int i = 0; i < n; i++){
        scanf("%d", &vetor[i]);
    }
    
    printf("Antes da ordenação:\n");
    for(i = 0; i < n; i++){
        printf("%d ", vetor[i]);
    }
    
    InsertionSort(vetor, n);
    
    printf("\nDepois da ordenação:\n");
    for(i = 0; i < n; i++){
        printf("%d ", vetor[i]);
    }

    return 0;
}

